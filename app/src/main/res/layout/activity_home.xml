<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lin_top"
    android:layout_centerInParent="true"
    android:background="@color/colorPeterRiver"
    android:orientation="vertical"
    android:padding="@dimen/dimen24"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">
    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_child_friendly" />

    <TextView
        android:id="@+id/tv_tagline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_toRightOf="@id/img_logo"
        android:text="NGASUH"
        android:textSize="@dimen/dimen20"
        android:textColor="@android:color/white"
        android:textStyle="italic"
        android:layout_marginStart="@dimen/dimen12"
        android:layout_marginLeft="@dimen/dimen12"
        />

    <TextView
        android:id="@+id/tv_tagline_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_tagline"
        android:text="Siap Menjadi Orangtua Muda"
        android:textSize="@dimen/dimen14"
        android:textColor="@android:color/white"
        android:layout_marginLeft="@dimen/dimen12"
        android:layout_toRightOf="@id/img_logo"
        android:layout_marginTop="@dimen/dimen5"
        android:layout_marginStart="@dimen/dimen12"
        />


    <TextView
        android:id="@+id/tvHallo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_tagline_desc"
        android:gravity="center"
        android:text="Hallo"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font16"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dimen30"
        android:layout_marginStart="@dimen/dimen50"
        android:layout_marginLeft="@dimen/dimen50"
        android:layout_marginEnd="@dimen/dimen50"
        android:layout_marginRight="@dimen/dimen50"
        />
    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHallo"
        android:gravity="center"
        android:text="Ananda "
        android:textColor="@android:color/white"
        android:textSize="@dimen/font16"
        android:textStyle="bold"
        android:layout_marginEnd="@dimen/dimen50"
        android:layout_marginRight="@dimen/dimen50"
        android:layout_marginStart="@dimen/dimen50"
        android:layout_marginLeft="@dimen/dimen50"
        />

    <View
        android:layout_below="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen3"
        android:layout_gravity="center"
        android:background="#ffffff"
        android:layout_marginTop="@dimen/dimen10"
        android:layout_marginStart="@dimen/dimen120"
        android:layout_marginLeft="@dimen/dimen120"
        android:layout_marginEnd="@dimen/dimen120"
        android:layout_marginRight="@dimen/dimen120"
        />

    <TextView

        android:id="@+id/tv_logout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen40"
        android:background="@drawable/bg_btn_masuk"
        android:clickable="true"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:text="Keluar"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dimen20"
        android:layout_marginStart="@dimen/dimen50"
        android:layout_marginLeft="@dimen/dimen50"
        android:layout_marginEnd="@dimen/dimen50"
        android:layout_marginRight="@dimen/dimen50"
        />



</RelativeLayout>